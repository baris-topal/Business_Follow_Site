@model AppUserAddDto
@{
    ViewData["Title"] = "KayitOl";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form asp-action="KayitOl" method="post" class="mt-4 w-75 mx-auto p-3 shadow">
    <h4 class="text-center">Kayıt Ol</h4>
    <div class="form-group">
        <label asp-for="Name">Ad: </label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Soyad: </label>
        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
        <input asp-for="@Model.Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Parola: </label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input asp-for="@Model.Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Parola: </label>
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adı: </label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <a asp-action="Index" class="btn btn-warning btn-sm">Vazgeç</a>
    <button type="submit" class="btn btn-info btn-sm">Kayıt Ol</button>
</form>
