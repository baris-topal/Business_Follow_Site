@model List<AciliyetListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count != 0)
{
    <a asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-sm btn-success my-2">
        <i class="fa fa-plus-circle mr-2"></i>Yeni Aciliyet Ekle</a>

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tanim</td>
                    <td> <a asp-action="GuncelleAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id"
                            class="btn btn-warning btn-sm">Düzenle<i class="far fa-edit ml-2"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">Sistemde kayıtlı aciliyet bulunamadı.</p>
        <a asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-sm btn-info my-2">Yeni Aciliyet Ekle</a>
    </div>
}