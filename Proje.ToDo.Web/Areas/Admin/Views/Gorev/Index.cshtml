@model List<GorevListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-action="EkleGorev" class="btn btn-success btn-sm my-2">
        <i class="fa fa-plus-circle mr-2"></i>Yeni Görev Oluştur
    </a>
    <table class="table table-sm table-hover">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>Aciliyet</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.OlusturulmaTarihi.ToString("D")</td>
                <td>@item.Aciliyet.Tanim</td>
                <td>
                    <a asp-action="GuncelleGorev" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        Düzenle<i class="far fa-edit ml-2"></i>
                    </a>
                    <a href="" data-toggle="modal" data-target="#silmeEkrani" data-id="@item.Id" class="btn btn-danger btn-sm">
                        Sil<i class="fa fa-times-circle ml-2"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="p-3 text-center mt-3">
        <p class="lead">Herhangi bir görev bulunamadı</p>
        <a asp-action="EkleGorev" class="btn btn-info btn-sm">Bir Görev Oluştur</a>
    </div>
}

<!-- Modal -->
<div class="modal fade" id="silmeEkrani" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">UYARI</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır, vazgeç</button>
                <button id="btnSil" type="button" class="btn btn-primary">Evet, Sil</button>
            </div>
        </div>
    </div>
</div>

@section JavaScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#silmeEkrani").on("show.bs.modal", function (event) {
                let tetikleyenElement = $(event.relatedTarget);
                let id = tetikleyenElement.data("id");

                $("#btnSil").click(function () {
                    $.ajax({
                        type: "get",
                        url: "./Gorev/SilGorev",
                        data: { id: id },
                        dataType: "json",
                        contentType: "application/json; charset=utf-8;",
                        success: function () {
                            //alert("İşlem tamam");
                            window.location.reload();
                        },
                        error: function (error) {
                            alert(error.statusText);
                        }
                    })
                });
            })
        });
    </script>
}
