@model PersonelGorevlendirListDto
@{
    ViewData["Title"] = "GorevlendirPersonel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row mt-2">
        <div class="col-md-4">
            <div class="card border ">
                <div class="card-header">
                    <h4 class="card-title lead pt-2">Görev Bilgileri</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Gorev.Ad</h5>
                    <p class="card-text">@Model.Gorev.Aciklama</p>
                    <p class="card-text"><strong>Aciliyet Durumu:</strong> <span class="badge badge-primary">@Model.Gorev.Aciliyet.Tanim</span></p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-3 border">
                <div class="card-header"><h5 class="text-center lead pt-2">Personel Bilgileri</h5></div>
                <div class="row no-gutters">
                    <div class="col-md-3">
                        <img src="~/img/@Model.AppUser.Picture" class="card-img img-thumbnail " style="height:13rem!important;width:13rem!important" alt="@Model.AppUser.Name">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <h5 class="card-title">@Model.AppUser.Name @Model.AppUser.SurName</h5>
                            <p class="card-text"><getirGorevAppUserId app-user-id="@Model.AppUser.Id"></getirGorevAppUserId></p>
                            <p class="card-text">
                                <small class="text-muted">@Model.AppUser.Email</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <form asp-action="AtaPersonel" method="post">
                <p class="float-left lead">
                    Yukarıdaki göreve ilgili personel görevlendirilecektir. Bu işlemi gerçekleştirmek istediğinizden emin misiniz?
                </p>

                <div class="form-group float-right">
                    <a asp-action="AtaPersonel" asp-route-id="@Model.Gorev.Id" class="btn btn-sm btn-danger">
                        Hayır, Vazgeç<i class="fa fa-times-circle ml-2"></i>
                    </a>
                    <input type="hidden" name="PersonelId" value="@Model.AppUser.Id" />
                    <input type="hidden" name="GorevId" value="@Model.Gorev.Id" />
                    <button type="submit" class="btn btn-sm btn-success">
                        Evet, Görevlendir<i class="fa fa-check-square ml-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

