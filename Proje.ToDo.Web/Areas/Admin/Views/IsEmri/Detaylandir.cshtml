@model GorevListAllDto
@{
    ViewData["Title"] = "Detaylandir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Raporlar.Count > 0)
{
    <a asp-action="GetirExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-info my-2 mr-2">
        Excel<i class="fa fa-file-excel ml-2"></i>
    </a>
    <a asp-action="GetirPdf" asp-route-id="@Model.Id" target="_blank" class="btn btn-info my-2">
        PDF<i class="fa fa-file-pdf ml-2"></i>
    </a>
    <table class="table table-hover table-sm mt-2 table-bordered">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.Surname isimli personelinizin "@Model.Ad" görevine yazmış olduğu raporlar.</th>
        </tr>
        <tr>
            <th class="w-25">Tanım</th>
            <th>Detay</th>
        </tr>
        @foreach (var rapor in Model.Raporlar)
        {
            <tr>
                <td>@rapor.Tanim</td>
                <td>@rapor.Detay</td>
            </tr>
        }
    </table>
    <a asp-action="Index" class="btn btn-warning btn-sm">Geri Dön<i class="fas fa-chevron-circle-left ml-2"></i></a>

}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname personeliniz şuan da @Model.Ad görevi üzerinde çalışıyor.Henüz bir rapor oluşturulmamış.
    </div>
}

